<?xml version="1.0" encoding="UTF-8" ?>
<install type="package" version="1.5">
	<name>Joomla! Authentication Tools</name>
	<packagename>jauthtools</packagename>
	<version>1.5.1</version>		
	<url>http://sammoffatt.com.au/os</url>
	<packager>Sam Moffatt</packager>
	<packagerurl>http://www.sammoffatt.com.au</packagerurl>
	<description>Joomla! Authentication Tools (JAuthTools) provides the ability to use more advanced authentication systems with Joomla! 1.5.</description>
	<update>http://www.jsitepoint.com/update/packages/jauthtools</update>
	<files folder="packages">
		<file type="library" 	id="lib_jauthtools_sso" >lib_jauthtools_sso.tgz</file>
		<file type="library" 	id="lib_jauthtools_usersource" >lib_jauthtools_usersource.tgz</file>
		<file type="plugin" 		group="sso"			id="edirldap" >plgSSOeDirLDAP.tgz</file>
		<file type="plugin" 		group="sso"			id="http" >plgSSOHTTP.tgz</file>
		<file type="plugin" 		group="system"			id="sync" >plgSystemSync.tgz</file>
		<file type="plugin" 		group="usersource"	id="ldap" >plgUserSourceLDAP.tgz</file>
	</files>
</install>
