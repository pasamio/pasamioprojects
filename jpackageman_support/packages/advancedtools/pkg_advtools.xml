<?xml version="1.0" encoding="UTF-8" ?>
<install type="package" version="1.5">
	<name>Joomla! Advanced Tools Package</name>
	<packagename>advtools</packagename>
	<url>http://sammoffatt.com.au/os</url>
	<version>1.5</version>
	<packager>Sam Moffatt</packager>
	<packagerurl>http://www.sammoffatt.com.au</packagerurl>
	<description>Joomla! Advaned Tools provides an easy package to install the library manager, table editor, advanced menu and update manager.</description>
	<update>http://www.jsitepoint.com/update/packages/advtools</update>
	<files folder="packages">
		<file type="component" 	id="com_jlibman" >com_jlibman.tgz</file>
		<file type="component"	id="com_tableeditor" >com_tableeditor.tgz</file>
		<file type="module" 	client="administrator"	id="mod_advmenu" >mod_advmenu.tgz</file>
		<file type="component" 	id="com_jupdateman" >com_jupdateman.tgz</file>
	</files>
</install>
