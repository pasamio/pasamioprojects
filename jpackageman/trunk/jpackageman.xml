<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
 <name>JPackageMan</name>
 <!-- The following elements are optional and free of formatting conttraints -->
 <creationDate>25-Oct-2007</creationDate>
 <author>Sam Moffatt</author>
 <authorEmail>sam.moffatt@toowoombarc.qld.gov.au</authorEmail>
 <authorUrl>http://www.toowoombarc.qld.gov.au</authorUrl>
 <copyright>Copyright (C) 2008 Toowoomba Regional Council/Sam Moffatt</copyright>
 <license>GNU GPL</license>
 <!--  The version string is recorded in the components table -->
 <version id="2">1.5.1</version>
 <!-- The description is optional and defaults to the name -->
 <description>This component is designed to allow bulk installation via packages</description>
 <installfile>install.php</installfile>
 <uninstallfile>uninstall.php</uninstallfile>
 <administration>
  <!-- Administration Menu Section -->
  <menu>Package Management</menu>
  
  <!-- Administration Main File Copy Section -->
  <files folder="admin">
		<!-- System Views, the default list and the detail screen --> 
		<filename>views/jpackageman/tmpl/default.php</filename>
		<filename>views/jpackageman/tmpl/index.html</filename>
		<filename>views/jpackageman/index.html</filename>
		<filename>views/jpackageman/view.html.php</filename>
		<filename>views/details/tmpl/index.html</filename>
		<filename>views/details/tmpl/default.php</filename>
		<filename>views/details/view.html.php</filename>
		<filename>views/index.html</filename>
		<!-- Data access models, default and details -->
		<filename>models/jpackageman.php</filename>
		<filename>models/index.html</filename>
		<filename>models/details.php</filename>
		<!-- Controller and Joomla! Admin landing point -->
		<filename>controller.php</filename>
		<filename>admin.jpackageman.php</filename>
		<filename>index.html</filename>
		<!-- Manifest for Joomla! 1.5 package -->
		<filename>manifests/joomla.xml</filename>
		<!-- The installer adapter to allow Joomla! 1.5 to handle packages -->
		<filename>include/package.php</filename>
		<filename>include/index.html</filename>
		<!-- jpackageman Support Class -->
		<filename>jpackageman.class.php</filename>
  </files>  
 </administration>
 <update>http://www.jsitepoint.com/update/components/jpackageman</update>
</install>